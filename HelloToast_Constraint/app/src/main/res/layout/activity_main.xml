<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="420dp"
        android:layout_height="83dp"
        android:background="#E45E38A9"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttonToast"
        android:layout_width="355dp"
        android:layout_height="67dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/button_background"
        android:text="Toast"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="353dp"
        android:layout_height="520dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/buttonIncrement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToast"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="96sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="730sp">

        <Button
            android:id="@+id/buttonIncrement"
            android:layout_width="165dp"
            android:layout_height="69dp"
            android:background="@drawable/button_background"
            android:text="Count"
            android:textSize="20sp"
            android:layout_marginLeft="28sp"/>

        <Button
            android:id="@+id/initialiser"
            android:layout_width="165dp"
            android:layout_height="69dp"
            android:background="@drawable/button_background"
            android:text="RÃ©initialiser"
            android:textSize="20sp"
            android:layout_marginLeft="22sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
